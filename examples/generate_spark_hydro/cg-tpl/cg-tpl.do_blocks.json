      "      @M hy_fill_fareas",
      "      @M hy_DIR_TARGET_enter_data(to, [hy_fareaX, hy_fareaY, hy_fareaZ])",
      "   end if",
      "",
      "   @M hy_map_tmp_states",
      "   @M hy_map_scr_ptrs",
      "   @M hy_DIR_TARGET_enter_data(alloc, [hy_starState, hy_tmpState])",
      "   @M hy_DIR_TARGET_enter_data(alloc, [hy_flx, hy_fly, hy_flz])",
